<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">

<servlet>
	<servlet-name>add</servlet-name>
	<servlet-class>com.sprince0031.AddServlet</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>add</servlet-name>
	<url-pattern>/add</url-pattern>
</servlet-mapping>

<servlet>
	<servlet-name>square</servlet-name>
	<servlet-class>com.sprince0031.SquareServlet</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>square</servlet-name>
	<url-pattern>/square</url-pattern>
</servlet-mapping>

<servlet>
	<servlet-name>login</servlet-name>
	<servlet-class>com.sprince0031.LoginServlet</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>login</servlet-name>
	<url-pattern>/login</url-pattern>
</servlet-mapping>

<servlet>
	<servlet-name>profile</servlet-name>
	<servlet-class>com.sprince0031.ProfileServlet</servlet-class>
	
	<init-param>
		<param-name>copyright</param-name>
		<param-value>sprince0031 2020</param-value>
	</init-param>
</servlet>
<servlet-mapping>
	<servlet-name>profile</servlet-name>
	<url-pattern>/profile</url-pattern>
</servlet-mapping>

<context-param>
	<param-name>copyright</param-name>
	<param-value>sprince0031</param-value>
</context-param>

</web-app>